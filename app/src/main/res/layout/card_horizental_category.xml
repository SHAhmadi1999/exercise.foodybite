<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/xsmall"
    app:cardElevation="2dp"
    app:cardCornerRadius="@dimen/small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/kindFood"
            android:layout_width="110dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/italian_food"
            android:foreground="@drawable/forground_little"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_kind"
            android:textSize="@dimen/medium"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/color_textLogin"
            app:layout_constraintStart_toStartOf="@id/kindFood"
            app:layout_constraintEnd_toEndOf="@id/kindFood"
            app:layout_constraintBottom_toBottomOf="@+id/kindFood"
            app:layout_constraintTop_toTopOf="@id/kindFood"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>